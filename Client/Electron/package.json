{
  "name": "ghostswitch-vpn",
  "version": "1.0.0",
  "description": "Secure VPN Client with WireGuard",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "vpn",
    "wireguard",
    "privacy",
    "security"
  ],
  "author": "GhostSwitch",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "fs-extra": "^11.3.1",
    "node-fetch": "^2.6.7",
    "path": "^0.12.7"
  },
  "build": {
    "appId": "com.ghostswitch.vpn",
    "productName": "GhostSwitch VPN",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "public/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/ghostswitch_icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/ghostswitch_icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/ghostswitch_icon.ico"
    }
  }
}
